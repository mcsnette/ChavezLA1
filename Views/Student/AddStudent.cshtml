@{
}
@model Student;

<h1>Add Student</h1>

<form asp-action="AddStudent" method="post">
    <div class="form-group">
        <label asp-for="Id">ID</label>
        <input asp-for="Id" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="IsTenured">Course</label>
        <select asp-for="Course" class="form-control">
            @foreach (var Course in Enum.GetValues(typeof(Course)))
            {
                <option value="@Course">@Course</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="DateEnrolled">Date Enrolled</label>
        <input asp-for="DateEnrolled" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>