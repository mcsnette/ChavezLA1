@model IEnumerable<Student>;

<h1>Student List</h1>

<a href="@Url.Action("AddStudent", "Student")" class="btn btn-primary">Add Student</a>

<table class="table table-striped table-dark">

    <tr>
        <td>ID</td>
        <td>Name</td>
        <td>Course</td>
        <td>DateEnrolled</td>
        <td>Show Details</td>
        <td>Update</td>


    </tr>
    @foreach (var Instructor in Model)
    {
        <tr>
            <td>@Instructor.Id </td>
            <td>@Instructor.Name</td>
            <td>@Instructor.Course</td>
            <td>@Instructor.DateEnrolled</td>
            <td><a asp-action="ShowDetail" asp-route-id="@Instructor.Id">Show Details</a></td>
            <td><a asp-action="Edit" asp-route-id="@Instructor.Id">Edit</a></td>
        </tr>
    }
</table>