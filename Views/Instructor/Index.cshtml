@model IEnumerable<Instructor>;

<h1>Instructor List</h1>

<a href="@Url.Action("AddInstructor", "Instructor")" class="btn btn-primary">Add Instructor</a>

<table class="table table-striped table-dark">

    <tr>
        <td>ID</td>
        <td>First Name</td>
        <td>Last Name</td>
        <td>Status</td>
        <td>Rank</td>
        <td>Hiring Date</td>
        <td>Details</td>
        <td>Update</td>
        <td>Delete</td>


    </tr>
    @foreach (var Instructor in Model)
    {
        <tr>
            <td>@Instructor.Id </td>
            <td>@Instructor.FirstName</td>
            <td>@Instructor.LastName</td>
            <td>@Instructor.IsTenured</td>
            <td>@Instructor.Rank</td>
            <td>@Instructor.HiringDate</td>
            <td><a asp-action="ShowDetail" asp-route-id="@Instructor.Id" class="btn btn-info">Show Details</a></td>
            <td><a asp-action="Edit" asp-route-id="@Instructor.Id" class="btn btn-success">Edit</a></td>
            <td><a asp-action="Delete" asp-route-id="@Instructor.Id" class="btn btn-danger">Delete</a></td>
        </tr>
    }
</table>
