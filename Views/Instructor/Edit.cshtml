@model Instructor;

<h1>Edit Instructor</h1>

<form asp-action="Edit" method="post">
    <@* div class="form-group" style="display: none;">
        <label asp-for="Id">ID</label>
        <input asp-for="Id" class="form-control" />    
    </div> *@
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="IsTenured">Status</label>
          <select asp-for="IsTenured" class="form-control">
                @foreach (var IsTenured in Enum.GetValues(typeof(IsTenured)))
                {
                    <option value="@IsTenured">@IsTenured</option>
                }
          </select>
    </div>
    <div class="form-group">
         <label for="Rank">Rank</label>
          <select asp-for="Rank" class="form-control">
                @foreach (var rank in Enum.GetValues(typeof(Rank)))
                {
                    <option value="@rank">@rank</option>
                }
          </select>
    </div>
    <div class="form-group">
        <label asp-for="HiringDate">Hiring Date</label>
          <input asp-for="HiringDate" class="form-control">
          <span asp-validation-for="HiringDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Update</button>
    <button type="button" onClick="history.back()" class="btn btn-secondary">Cancel</button>
</form>